#!/bin/bash
# Stop on errors
set -Eeuo pipefail
set -x

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    #File that will store uploaded photos
    mkdir -p src/db/uploads
    sqlite3 src/db/493Food.db < sql/schema.sql
    sqlite3 src/db/493Food.db < sql/data.sql
    cp sql/uploads/* src/db/uploads/
    ;;

  "destroy")
    rm -rf src/db/493Food.db src/db/uploads
    ;;

  "reset")
   rm -rf src/db/493Food.db src/db/uploads
   mkdir -p src/db/uploads
   sqlite3 src/db/493Food.db < sql/schema.sql
   sqlite3 src/db/493Food.db < sql/data.sql
   cp sql/uploads/* src/db/uploads/
   ;;

  "dump")
    sqlite3 -batch -line src/db/493Food.db 'SELECT * FROM users'
    ;;
esac
